{
    "settings": {
        "number_of_shards" : 1,
        "number_of_replicas": 0,
        "analysis": {
            "filter": {
                "autocomplete_filter": {
                    "type":     "edge_ngram",
                    "min_gram": 2,
                    "max_gram": 15
                }
            },
            "analyzer": {
                "autocomplete": {
                    "type":      "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "autocomplete_filter" 
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
                "language": {"type": "text", "analyzer": "standard", "search_analyzer": "standard"},
                "content": {"type": "text", "analyzer": "autocomplete", "search_analyzer": "autocomplete"},
                "verse_id": {"type": "integer"}
            }
    }
}